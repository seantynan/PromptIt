{
  "manifest_version": 3,
  "name": "PromptIt",
  "version": "1.0",
  "description": "Run AI promptlets on selected text.",
  "permissions": ["contextMenus", "scripting", "sidePanel", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "PromptIt"
  }
}
