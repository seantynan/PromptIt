{
  "manifest_version": 3,
  "name": "PromptIt",
  "version": "1.0",
  "description": "Run custom AI promptlets on selected text.",
  "permissions": ["contextMenus", "sidePanel", "storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "PromptIt",
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
