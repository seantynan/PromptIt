{
  "manifest_version": 3,
  "name": "PromptIt",
  "description": "Select text, choose a Promptlet, and view AI-powered output in a side panel.",
  "version": "0.1",
  "icons": {
    "128": "icons/icon128.png"
  },

  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "sidePanel"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "action": {
    "default_title": "PromptIt"
  }
}
